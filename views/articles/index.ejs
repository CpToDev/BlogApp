<%- include('partials/header') -%>

<div class="container">
	<% articles.forEach(article=>{ %>
	<div class="card mt-4">
		<div class="card-body">
			<h5 class="card-title"><%= article.title %></h5>
			<h6 class="card-subtitle mb-2 text-muted"><%= article.createdAt.toLocaleDateString() %></h6>
			<p class="card-text"><%= article.description.substring(0,150) %>....</p>
			<a href="/articles/<%= article.id %>" class="btn btn-primary btn-sm">ReadMore</a>
		</div>
	</div>

	<% }) %>
</div>
<%- include('partials/footer') -%>
