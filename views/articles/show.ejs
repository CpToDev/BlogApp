<%- include('partials/header') -%>
<div class="container">
	<h1 class="mb-4 mt-4"><%= article.title %></h1>
	<span class="card-subtitle mb-2 text-muted"><%= article.createdAt.toLocaleDateString() %></span>
	<span class="ml-3"><a href="#"> <%= article.author %></a></span
	><br />
	<a href="/articles" class="btn btn-secondary btn-sm mt-4">All Articles</a>
	<% if(isAutherized){ %>
	<a href="/articles/edit/<%= article.id %>" class="btn btn-primary btn-sm mt-4">Edit</a>
	<a href="/articles/delete/<%= article.id %>" class="btn btn-danger btn-sm mt-4">Delete</a>
	<% } %>

	<div class="container mt-4"><%= article.description %></div>
</div>
<%- include('partials/footer') -%>
